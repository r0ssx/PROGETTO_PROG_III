<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" prefWidth="400" prefHeight="150"
            fx:controller="Client.Controllers.ProductController">
    <children>
        <VBox>
            <!-- Product Name -->
            <Label fx:id="nameLabel" text="Product Name" style="-fx-font-weight: bold; -fx-font-size: 16px;" wrapText="true"/>

            <!-- Description -->
            <Label fx:id="descriptionLabel" text="Product description goes here." wrapText="true"/>

            <!-- Price and Inventory Code -->
            <HBox spacing="20">
                <Label fx:id="priceLabel" text="0.00" style="-fx-font-size: 14px;"/>
                <Label fx:id="inventoryCodeLabel" text="INV12345" style="-fx-font-size: 14px;"/>
                <Label fx:id="categoryLabel" text="Category" style="-fx-font-size: 14px;"/>
            </HBox>
            <!-- Add to Cart Button -->
            <Button fx:id="addToCartButton" text="Add to Cart" maxWidth="120"/>
        </VBox>
    </children>
</AnchorPane>

