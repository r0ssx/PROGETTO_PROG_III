<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Client.Controllers.PaymentController">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>

   <Label fx:id="welcomeText" text="Payment" />
   <TextField fx:id="usernameField" promptText="Card Holder" />
   <TextField fx:id="usernameField1" layoutX="30.0" layoutY="67.0" promptText="Card Number" />
   <Button onAction="#creditCardClick" text="Pay as Credit Card" />
   <Button layoutX="78.0" layoutY="157.0" onAction="#bancomatClick" text="Pay as Bancomat" />
   <Button fx:id="backButton" onAction="#backClick" text="Back" />
   <Label fx:id="errorText" layoutX="75.0" layoutY="30.0" />
</VBox>
