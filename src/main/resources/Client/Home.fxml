<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Label?>
<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="Client.Controllers.HomeController"
      spacing="25"
      alignment="CENTER"
      prefWidth="500"
      prefHeight="400">

    <!-- Page title -->
    <Label text="Home"
           style="-fx-font-size: 24px; -fx-font-weight: bold;" />

    <Button text="User Login"
            fx:id="userLoginButton"
            prefWidth="200"
            prefHeight="45"
            onAction="#handleUserLogin"/>

    <Button text="User Register"
            fx:id="userRegisterButton"
            prefWidth="200"
            prefHeight="45"
            onAction="#handleUserRegister"/>

    <Button text="Admin Login"
            fx:id="adminLoginButton"
            prefWidth="200"
            prefHeight="45"
            onAction="#handleAdminLogin"/>

</VBox>
